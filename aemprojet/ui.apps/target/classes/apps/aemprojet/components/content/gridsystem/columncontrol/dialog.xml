<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    modal="{Boolean}true"
    title="Column Control"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <colctrl
                jcr:primaryType="cq:Widget"
                title="Column control"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <coltype
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        editable="true"
                        fieldDescription="select the type of column control to generate. Note: once columns are generated they cannot be re-generated."
                        fieldLabel="Column type"
                        name="./coltype"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <col-8-4
                                jcr:primaryType="nt:unstructured"
                                text="8-4 Column"
                                value="8-4-col"/>
                            <col-4-8
                                jcr:primaryType="nt:unstructured"
                                text="4-8 Column"
                                value="4-8-col"/>
                            <col-4-4-4
                                jcr:primaryType="nt:unstructured"
                                text="4-4-4 Column"
                                value="4-4-4-col"/>
                            <col-6-6
                                jcr:primaryType="nt:unstructured"
                                text="6-6 Column"
                                value="6-6-col"/>
                            <col-3-3-3-3
                                jcr:primaryType="nt:unstructured"
                                text="3-3-3-3 Column"
                                value="3-3-3-3-col"/>
                            <col-3-9
                                jcr:primaryType="nt:unstructured"
                                text="3-9 Column"
                                value="3-9-col"/>
                            <col-9-3
                                jcr:primaryType="nt:unstructured"
                                text="9-3 Column"
                                value="9-3-col"/>
                            <col-3-3-6
                                jcr:primaryType="nt:unstructured"
                                text="3-3-6 Column"
                                value="3-3-6-col"/>
                            <col-6-3-3
                                jcr:primaryType="nt:unstructured"
                                text="6-3-3 Column"
                                value="6-3-3-col"/>
                            <col-3-6-3
                                jcr:primaryType="nt:unstructured"
                                text="3-6-3 Column"
                                value="3-6-3-col"/>
                            <col-10-2
                                jcr:primaryType="nt:unstructured"
                                text="10-2 Column"
                                value="10-2-col"/>
                            <col-2-10
                                jcr:primaryType="nt:unstructured"
                                text="2-10 Column"
                                value="2-10-col"/>
                        </options>
                        <listeners jcr:primaryType="nt:unstructured"/>
                    </coltype>
                    <color
                        jcr:primaryType="cq:Widget"
                        defaultValue="demo-border-blue"
                        fieldLabel="Border Color"
                        name="./color"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blue
                                jcr:primaryType="nt:unstructured"
                                text="Blue"
                                value="demo-border-blue"/>
                            <black
                                jcr:primaryType="nt:unstructured"
                                text="Black"
                                value="demo-border-black"/>
                            <red
                                jcr:primaryType="nt:unstructured"
                                text="Red"
                                value="demo-border-red"/>
                            <green
                                jcr:primaryType="nt:unstructured"
                                text="Green"
                                value="demo-border-green"/>
                        </options>
                    </color>
                </items>
            </colctrl>
        </items>
    </items>
</jcr:root>
